.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      %h2.chat-main__group-info__left-box__group-name
        = @group.name
        %ul.chat-main__group-info__left-box__member-list
          Memberï¼š
          %li.chat-main__group-info__left-box__member-name
            - @group.users.each do |user|
              = user.name
    .chat-main__group-info__edit-btn
      = link_to edit_group_path(@group) do
        Edit
  .chat-main__message-list
    .messages
      = render @messages

  .chat-main__message-form
    .chat-main__message-form__new-message
      = form_for [@group, @message], html: { class: "chat-main__message-form__new-message-box"}  do |f|
        .input-box
          = f.text_field :content, class: "input-box__text", placeholder: "type a message"
          = f.label :image, class: "input-box__image" do
            = icon("fas", "image")
            = f.file_field :image, class: "input-box__image__file"
        = f.submit "Send", class: "submit-btn"